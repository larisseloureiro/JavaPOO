import java.util.ArrayList;
import java.util.List;

public class Main {

	public static void main(String[] args) {
		
		List<String> magia = new ArrayList<>();
		//magia.add("Observer");
		
	
		Mago mago = new Mago("Racer", 1, 2, 1, 2,1, 1.5f,magia);
		mago.lvlUp();
		//mago.lvlUp();
		mago.aprenderMagia();
		//mago.attack();
		
		
		Mago mago2 = new Mago("DX",10, 3, 21, 40,1, 2.5f,magia);
		mago2.lvlUp();
		mago2.aprenderMagia();
		
		
		System.out.println("--------------Mago--------------");
		System.out.println("Nome: " + mago.getNome() + " Vida:  " + mago.getVida() + 
							" Mana: " + mago.getMana() +
							" Inteligência: " + mago.getInteligencia() +
							" Força: " + mago.getForca() +
							" Level: " + mago.getLevel() +
							" XP: " + mago.getXp() +
							" Magia: " + mago.getMagia());
		
		System.out.println("--------------Mago--------------");
		System.out.println("Nome: " + mago2.getNome() + " Vida:  " + mago2.getVida() + 
							" Mana: " + mago2.getMana() +
							" Inteligência: " + mago2.getInteligencia() +
							" Força: " + mago2.getForca() +
							" Level: " + mago2.getLevel() +
							" XP: " + mago2.getXp() +
							" Magia: " + mago2.getMagia());
		
		
		
		Guerreiro guerreiro = new Guerreiro();
		guerreiro.lvlUp();
		System.out.println("--------------Guerreiro--------------");
		System.out.println("Vida: " + guerreiro.getVida());
		System.out.println("Força: " + guerreiro.getForca());
		
		
		
		
	}

}
