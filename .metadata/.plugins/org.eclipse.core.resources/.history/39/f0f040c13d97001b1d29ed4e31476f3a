
public class Main {

	public static void main(String[] args) {
		Gerente gerente  = new Gerente("lala", 22, 100);
		Supervisor supervisor = new Supervisor("Diego", 26, 50);
		Vendedor vendedor = new Vendedor("Natalia", 30, 10);
		
		System.out.println("Nome: " + gerente.nome + 
							"Cargo: Gerente " +
							" Idade: " + gerente.idade +
							" Salário: " + gerente.salario +
							" Bonificação: " + gerente.bonificacao());
		
		System.out.println("Nome: " + supervisor.nome + 
							" Cargo: Supervisor " + 
							" Idade: " + supervisor.idade +
							" Salário: " + supervisor.salario +
							" Bonificação: " + supervisor.bonificacao());
		
		System.out.println("Nome: " + vendedor.nome + 
				" Cargo: Vendedor " + 
				" Idade: " + vendedor.idade +
				" Salário: " + vendedor.salario +
				" Bonificação: " + vendedor.bonificacao());
	}

}
